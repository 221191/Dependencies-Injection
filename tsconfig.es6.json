{
  "compilerOptions": {
    "module": "es6",
    "esModuleInterop": true,
    "target": "es6",
    "lib": ["es2020", "dom"],
    "rootDir": "app",
    "outDir": "./dist/app",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "allowJs": true
  },
  "include": ["app/**/*"],
  "exclude": ["node_modules"]
}
