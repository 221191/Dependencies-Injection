{
  "name": "di-task",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf ./dist && mkdir dist",
    "build:server": "tsc --build tsconfig.es5.json",
    "build:client": "tsc --build tsconfig.es6.json --watch",
    "build": "yarn clean && cp ./index.html ./dist/index.html && yarn build:server && yarn build:client",
    "run:server": "nodemon --watch dist ./dist/server.js",
    "start": "concurrently \"yarn build\" \"yarn run:server\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^18.0.5",
    "@types/whatwg-fetch": "^0.0.33",
    "concurrently": "^7.2.2",
    "nodemon": "^2.0.19",
    "typescript": "^4.7.4"
  }
}
